static void Main(string[] args)
        {
            int i, j;
            int MAX = 10;
 
            for (i = MAX; i >= 0; i--)
            {
                for (j = 0; j <= i; j++)
                {
                    Console.Write("*");
                }
                Console.Write("\n");
            }
            Console.ReadLine();
        }
